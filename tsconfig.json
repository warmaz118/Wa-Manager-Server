{
    "compilerOptions": {
        "module": "ESNext",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "sourceMap": true,
        "allowImportingTsExtensions": true,
        "noImplicitAny": true,
        "noEmit": true,
        "baseUrl": "./src"
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.ts"]
}